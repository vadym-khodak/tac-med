VITE_API_URL=http://{{ ansible_host }}:3000

# Auth0 Configuration (replace with your values)
VITE_AUTH0_DOMAIN={{ auth0_domain | default('your-auth0-domain') }}
VITE_AUTH0_CLIENT_ID={{ auth0_client_id | default('your-auth0-client-id') }}
VITE_AUTH0_CALLBACK_URL=http://{{ ansible_host }}:4200
VITE_AUTH0_AUDIENCE={{ auth0_audience | default('your-auth0-audience') }}

# Sentry (optional)
{% if sentry_dsn_client is defined %}
VITE_SENTRY_DSN={{ sentry_dsn_client }}
{% endif %}

# Environment
VITE_NODE_ENV={{ environment }}