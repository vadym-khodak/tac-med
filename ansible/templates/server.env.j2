PORT=3000

# MongoDB
MONGO_URI=mongodb://localhost:27017/tac-med-{{ environment }}

# Application URLs
ORIGIN_URL=http://{{ ansible_host }}:4200
API_DOMAIN_NAME=api-{{ environment }}.tac-med.local

# Environment
NODE_ENV={{ environment }}
STAGE={{ environment }}

# Auth0 Configuration (replace with your values)
AUTH0_DOMAIN={{ auth0_domain | default('your-auth0-domain') }}
AUTH0_AUDIENCE={{ auth0_audience | default('your-auth0-audience') }}

# Sentry (optional)
{% if sentry_dsn is defined %}
SENTRY_DSN={{ sentry_dsn }}
{% endif %}
{% if sentry_auth_token is defined %}
SENTRY_AUTH_TOKEN={{ sentry_auth_token }}
{% endif %}

# Security
JWT_SECRET={{ jwt_secret | default('change-this-in-production') }}

# Logging
LOG_LEVEL={{ log_level | default('info') }}