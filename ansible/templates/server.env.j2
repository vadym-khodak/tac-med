# Environment configuration for tac-med server
NODE_ENV={{ node_env }}
PORT={{ server_port }}
MONGO_URI=mongodb://127.0.0.1:{{ mongodb_port }}/{{ mongodb_database }}

# JWT Configuration
JWT_SECRET={{ lookup('password', '/dev/null chars=ascii_letters,digits length=32') }}
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_PASSWORD={{ lookup('password', '/dev/null chars=ascii_letters,digits length=16') }}